<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:background="@drawable/ic_group_9">


    </ImageView>

    <EditText
        android:layout_width="match_parent"
        android:layout_below="@id/main"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="93dp"
        android:id="@+id/email"
        android:textColor="#7D7373"
        android:singleLine="true"
        android:textColorHint="#7D7373"
        android:hint="Email"
        android:textSize="17dp"
        android:backgroundTint="#C5BFBF"
        android:textStyle="bold"
        android:fontFamily="@font/seabird"
        android:layout_height="wrap_content">

    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_below="@id/email"
        android:textSize="17dp"
        android:inputType="textPassword"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="23dp"
        android:textColor="#7D7373"
        android:layout_marginRight="93dp"
        android:singleLine="true"
        android:textStyle="bold"
        android:backgroundTint="#C5BFBF"
        android:id="@+id/pass"
        android:textColorHint="#7D7373"

        android:hint="Password"
        android:fontFamily="@font/seabird"
        android:layout_height="wrap_content">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:textSize="22dp"
        android:textStyle="bold"
        android:text="Sign in"

        android:layout_marginBottom="85dp"
        android:layout_marginLeft="23dp"
        android:textColor="#3C3B3B"
        android:fontFamily="@font/seabird"></TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_group_6"
        android:id="@+id/signinbtn"
        android:layout_marginBottom="68dp"
        android:layout_alignRight="@id/signinbtn"
        android:layout_marginRight="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"></ImageView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:textSize="17dp"
        android:text="Sign up"
        android:focusable="false"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="23dp"
        android:id="@+id/register"
        android:textColor="#000000"
        android:fontFamily="@font/seabird"></EditText>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:textSize="14dp"


        android:focusable="false"
        android:text="Reset Password"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="20dp"
        android:textColor="#000000"
        android:fontFamily="@font/seabird">

    </EditText>



</RelativeLayout>