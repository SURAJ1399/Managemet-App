<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    android:id="@+id/root"
    tools:context=".AddProjectFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:elevation="45dp"
        android:background="@drawable/header"
        android:layout_height="70dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="70dp"
            android:src="@drawable/x"
            android:scaleType="centerCrop"
            android:id="@+id/x"
            android:layout_alignParentStart="true"
            android:contentDescription="TODO" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PIE-DEVELOPERS"
            android:layout_marginTop="17dp"
            android:fontFamily="@font/seabird"
            android:layout_toRightOf="@+id/x"
            android:textSize="20dp"
            android:textColor="#050505"
            android:gravity="center" />




    </RelativeLayout>


    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
        android:elevation="56dp"
    android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:textColorHint="#636262"
            android:backgroundTint="#000000"
            android:layout_height="60dp">

            <EditText
                android:layout_width="match_parent"
                android:textColor="#090909"
                android:fontFamily="@font/seabird"
                android:id="@+id/pname"
                android:backgroundTint="#000000"
                android:textColorHint="#000000"
                android:textSize="12dp"

                android:layout_height="wrap_content"
                android:hint="Project Name"></EditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:textColorHint="#4A4949"
            android:backgroundTint="#000000"
            android:layout_height="60dp">

            <EditText
                android:id="@+id/pbudget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#000000"
                android:fontFamily="@font/seabird"
                android:hint="Budget"
                android:inputType="number"

                android:textColor="#090909"
                android:textColorHint="#000000"
                android:textSize="12dp"></EditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:textColorHint="#5A5959"
            android:backgroundTint="#000000"
            android:layout_height="60dp">

            <EditText
                android:layout_width="match_parent"
                android:textColor="#090909"
                android:fontFamily="@font/seabird"
                android:backgroundTint="#000000"
                android:id="@+id/cnumber"
                android:textColorHint="#393838"
                android:inputType="number"
                android:maxLength="10"
                android:textSize="12dp"

                android:layout_height="wrap_content"
                android:hint="Client Number" />


        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:textColorHint="#5A5959"
            android:backgroundTint="#000000"
            android:layout_height="60dp">

            <EditText
                android:layout_width="match_parent"
                android:textColor="#090909"
                android:fontFamily="@font/seabird"
                android:backgroundTint="#000000"
                android:textColorHint="#393838"
                android:textSize="12dp"
                android:id="@+id/cname"
                android:layout_height="wrap_content"
                android:hint="Client Name" />


        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:id="@+id/date"
                android:hint="Start Date(DD-MM-YY)"
                android:textSize="12dp"
                android:textColorHint="#000000"
                android:inputType="text"
                android:textColor="#070707"
                android:fontFamily="@font/seabird"
                android:layout_marginLeft="12dp"
                app:met_baseColor="#232323"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="#111110"
                />
            <Button
                android:layout_width="80dp"
                android:layout_marginLeft="12dp"
                android:id="@+id/choose1"
                android:background="#0E0E0E"
                android:textAllCaps="false"
                android:fontFamily="@font/seabird"
                android:textColor="#fff"
                android:textSize="12dp"
                android:layout_height="20dp"
                android:text="Choose"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">


            <EditText
                android:layout_width="190dp"
                android:layout_height="50dp"
                android:id="@+id/imageurl"
                android:hint="https://unapt-night.000we"
                android:textSize="12dp"
                android:textColorHint="#B8B6B6"
android:singleLine="true"
                android:textColor="#070707"
                android:fontFamily="@font/seabird"

                />

            <Button
                android:id="@+id/choose2"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_marginLeft="14dp"
                android:background="#040404"
                android:fontFamily="@font/seabird"
                android:text="Image"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="9dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

<RadioGroup
    android:layout_width="wrap_content"
    android:id="@+id/radiogp"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Website"
                android:fontFamily="@font/seabird"
                android:outlineSpotShadowColor="#220B0A0A"
                android:id="@+id/web"
                android:checked="true"
                android:textColor="@color/black"></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android"
                android:fontFamily="@font/seabird"
android:id="@+id/android"
                android:layout_marginLeft="34dp"
                android:textColor="@color/black"></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others"
                android:fontFamily="@font/seabird"
                android:id="@+id/others"
                android:layout_marginLeft="34dp"
                android:textColor="@color/black"></RadioButton>
</RadioGroup>  </LinearLayout>
        <ImageView
            android:layout_width="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="65dp"
            android:layout_marginTop="34dp"
            android:layout_marginBottom="26dp"
            android:id="@+id/addproject"
            android:src="@drawable/ic_group_5" />

    </LinearLayout>
    </androidx.cardview.widget.CardView>  â€‹



</LinearLayout>
